{
    "name": "GymApp Development Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    
    // Ruta correcta al archivo de orquestación (docker-compose.yml)
    "dockerComposeFile": [
        "workshops/Workshop-4/docker-compose.yml"
    ],
    
    // Conecta la terminal al contenedor del frontend
    "service": "frontend",
    
    // Mapea los puertos
    "forwardPorts": [5432, 8080, 8000, 5173],
    
    // Comando corregido: entra a la carpeta 'frontend' y ejecuta la instalación/inicio
    "postStartCommand": "cd workshops/Workshop-4/frontend && npm install && npm run dev",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "ms-python.python",
                "dbaeumer.vscode-eslint"
            ]
        }
    }
}